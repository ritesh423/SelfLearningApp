<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/menu_popular">

    <fragment
        android:id="@+id/menu_popular"
        android:name="com.example.myapplication.ui.PopularFragment"
        android:label="PopularFragment">
        <action
            android:id="@+id/action_menu_popular_to_articleFragment"
            app:destination="@id/menu_details" />
    </fragment>
    <fragment
        android:id="@+id/menu_favorite"
        android:name="com.example.myapplication.ui.FavoriteFragment"
        android:label="FavoriteFragment">
        <action
            android:id="@+id/action_menu_favorite_to_articleFragment"
            app:destination="@id/menu_details" />
    </fragment>
    <fragment
        android:id="@+id/menu_search"
        android:name="com.example.myapplication.ui.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/action_menu_search_to_articleFragment"
            app:destination="@id/menu_details" />
    </fragment>
    <fragment
        android:id="@+id/menu_details"
        android:name="com.example.myapplication.ui.DetailsFragment"
        android:label="ArticleFragment">

        <argument
        android:name="movieId"
        app:argType="integer" />

    </fragment>
    <fragment
        android:id="@+id/menu_top_rated"
        android:name="com.example.myapplication.ui.TopRatedFragment"
        android:label="Top rated"
        tools:layout="@layout/fragment_top_rated" >
        <action
            android:id="@+id/action_topRated_to_articleFragment"
            app:destination="@id/menu_details" />
    </fragment>

</navigation>
