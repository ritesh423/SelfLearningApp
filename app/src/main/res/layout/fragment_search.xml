<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app  ="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_search_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top app bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarSearch"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Search"
            app:navigationIcon="?attr/homeAsUpIndicator" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Page content -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Search box inside a card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="Search movies…"
                app:iconifiedByDefault="false" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick filter chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_marginTop="10dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupFilters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleLine="true"
                app:chipSpacingHorizontal="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTopRated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="Top rated"
                    app:checkedIconVisible="true"
                    app:chipIcon="@drawable/ic_star_24dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="2024+"
                    app:checkedIconVisible="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:text="DC"
                    app:checkedIconVisible="true" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <!-- Content area with grid + states layered -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1">

            <!-- Results grid -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSearchResults"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                tools:listitem="@layout/item_movie" />

            <!-- Empty state -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:alpha="0.6"
                    android:src="@drawable/ic_search" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:text="Search for movies"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Try “Batman”, “Inception”, “Oppenheimer”…"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:alpha="0.7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Shimmer overlay while loading -->
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:shimmer_auto_start="true"
                app:shimmer_duration="1000">

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:columnCount="2">

                    <!-- IMPORTANT: override width/height on the include so
                         GridLayout can size them as half-width cells -->
                    <include
                        layout="@layout/shimmer_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        android:layout_margin="4dp"/>

                    <include
                        layout="@layout/shimmer_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        android:layout_margin="4dp"/>

                    <include
                        layout="@layout/shimmer_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        android:layout_margin="4dp"/>

                    <include
                        layout="@layout/shimmer_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        android:layout_margin="4dp"/>

                    <include
                        layout="@layout/shimmer_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        android:layout_margin="4dp"/>

                    <include
                        layout="@layout/shimmer_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        android:layout_margin="4dp"/>
                </androidx.gridlayout.widget.GridLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>


            <!-- Optional legacy spinner (kept for compatibility with your code) -->
            <ProgressBar
                android:id="@+id/pbSearchLoading"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
